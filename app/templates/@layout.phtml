    <!-- HEADER -->
        <div id="header-bar">
            <div class="container" id="sub-header">
                <div class="row hidden-xs hidden-sm">
                    <div class="top-benefits dokdy col-sm-3 col-lg-3" title="Platí pro všechno zboží, které máme skladem.">
