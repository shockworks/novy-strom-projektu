        <div id="header">
            <div class="container" id="sub-header">
                <div class="row logo-search-buy">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <{block logo}span{/block} class="navbar-left"><a n:href="Default:" class="navbar-link"><img alt="logo" src="/images/logo.png" class="logo" /></a></{block logo_end}span{/block}>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        {control searchForm:autocomplete}
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        {snippet cartbox}
                    <div id="out-top-cart">
                        <a n:href="Cart:" id="top-cart">
                            {$cartCount}
                        </a>
                        <div id="under-top-cart" class="{if $cartCount == 0}empty{/if}">
                            <div class="out-triangle"><div class="triangle-with-shadow"></div></div>
                            {if $cartCount > 0}
                                <div class="top">
                                    <div class="in {if $cartList > 3}scroll{/if}">
                                        {? include(APP_DIR.'/templates/Functions/cartParams.php'); }
                                        {foreach $cartList as $item}
                                            <a class="cart-prod">
                                                <div class="obal-cart-img img">
                                                    <img src="{plink Files:default $item->object->mainFoto,65,90}" alt="fotografie není k dispozici" />
                                                </div>
                                                <p>
                                                    <strong>{$item->name}</strong>
                                                    <br /><span>ks {$item->count}</span>
                                                    <br /><span>vel M</span>
                                                    <br />
                                                    {if $item->object->price_recommended > $item->price}
                                                        <span class="price-trought">{$item->object->price_recommended|money}</span> <span class="price">{$item->price|money}</span>
                                                    {else}
                                                        <span class="price">{$item->price|money}</span>
                                                    {/if}
                                                </p>
                                            </a>
                                        {/foreach}
                                    </div>
                                </div>
                                <div class="bottom">
                                    <p>{_'Celková cena'}: <strong>{$cartSum|money}</strong></p>
                                    <a n:href="Cart:" class="btn green">{_'Obsah nákupní tašky'}</a>
                                </div>
                            {else}
                                <p>Momentálně zde není žádná hudba,kterou by sis mohl obléknout…</p>
                                <span class="italic">Honem do obchodu!</span>
                            {/if}
                        </div>
                    </div>
                    <script>
                        var timer;
                        $('#out-top-cart').hover(function(){
                            clearTimeout(timer);
                            $('#under-top-cart').addClass('ac').fadeIn('fast');
                        },function(){
                            timer = setTimeout(function() {
                                $('#under-top-cart').removeClass('ac').fadeOut('fast');
                            }, 500);
                        });
                    </script>
                {/snippet}
                        {control simpleLoginForm,65,-200}
